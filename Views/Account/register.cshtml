@using blogg.Models.viewModel
@model RegisterModel

<div class="container w-50 h-100">
    <h1>Login</h1>
    <form asp-action="Register"asp-controller="Account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" type="text" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email">Email address</label>
            <input asp-for="Email" type="email" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="ConfirmPassowrd">Confirm Password</label>
            <input asp-for="ConfirmPassowrd" type="password" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label asp-for="PhoneNumber">Phone number</label>
            <input asp-for ="PhoneNumber" type="number" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>