@using blogg.Models.viewModel.RoleViewModel
@model EditRoleViewModel


<h1>edit role</h1>

<form asp-action="EditRole" asp-controller="Role" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mb-3">
        <label>Id</label>
        <input asp-for="Id" type="text" class="form-control" readonly>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
        <div class="form-group mb-3">
            <label>Role</label>
            <input asp-for="RoleName" type="text" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

    <div class="card-footer">
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="ListRoles" class="btn btn-primary">cancel</a>

            </div>
        </div>
       <div class="card">
            <div class="card-header">
                <h3>users in this role</h3>
            </div>
            <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h5>@user</h5>
                }
            }
            else
            {
                <h5>no user</h5>
            }

            </div>
            <div class="card-footer">
            <div class="form-group row">
                <div class="col-sm-10">
                   
                 <a asp-action="EditUsersInRole"asp-controller="Role" 
                 asp-route-id="@Model.Id" name="roleId" class="btn btn-primary">
                 Add or remove users</a>
                
                </div>
            </div>
       </div>
    </div>
      </form>